<Project Sdk="Microsoft.NET.Sdk.Razor">

  <!-- Build -->
  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <Nullable>disable</Nullable>
    <ImplicitUsings>disable</ImplicitUsings>
    <StaticWebAssetBasePath>/</StaticWebAssetBasePath>
  </PropertyGroup>
  
  <ItemGroup>
    <SupportedPlatform Include="browser" />
  </ItemGroup>

  <!-- Reference -->
  <ItemGroup>
    <PackageReference Include="MDP.Reflection" Version="8.0.7.62" />
    <PackageReference Include="MDP.Registration" Version="8.0.7.62" />
    <PackageReference Include="MDP.Security.Claims" Version="8.0.7.62" />
    <PackageReference Include="MDP.Threading.Tasks" Version="8.0.7.62" />
    <PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="8.0.11" />
    <PackageReference Include="Microsoft.AspNetCore.Components.Authorization" Version="8.0.11" />
  </ItemGroup>

  <!-- Package -->
  <PropertyGroup>
    <authors>CLK Software Studio</authors>
    <copyright>Copyright Â© 2014 CLK Software Studio</copyright>
    <description>MDPCore Library</description>
    <PackageIcon>Package.png</PackageIcon>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/Clark159/MDP.Net</PackageProjectUrl>
  </PropertyGroup>
  <ItemGroup>
    <None Include="..\..\Package.png" Pack="true" PackagePath="\Package.png" />
    <None Include="..\..\README.md" Pack="true" PackagePath="\README.md" />
  </ItemGroup>
</Project>
